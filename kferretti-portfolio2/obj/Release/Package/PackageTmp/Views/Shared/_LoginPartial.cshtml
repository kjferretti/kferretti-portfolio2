@using Microsoft.AspNet.Identity
@if (!Request.IsAuthenticated)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Blog</a>
        <ul class="dropdown-menu">
            <li><a href="@Url.Action("Index", "Blog")">Home</a></li>
            <li><a href="@Url.Action("Index", "Topics")">Topics</a></li>
            <li><a href="@Url.Action("Login", "Account")">Login</a></li>
        </ul>
    </li>

    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
}
else
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Blog</a>
        <ul class="dropdown-menu">
            <li><a href="@Url.Action("Index", "Blog")">Home</a></li>
            <li><a href="@Url.Action("Index", "Topics")">Topics</a></li>
        </ul>
    </li>

    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>

    <li style="padding-top:12px;padding-left:7px;padding-right:10px">
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
            @Html.AntiForgeryToken()
            <a id="logout" style="color:white" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
            }
    </li>
}
